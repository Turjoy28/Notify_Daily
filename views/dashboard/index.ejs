<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4 align-items-center">
    <div class="col">
      <h1>Hey, <%= userName %></h1>
    </div>
    <div class="col text-end">
      <a href="/dashboard/add" class="btn btn-primary">+ New Note</a>
    </div>
  </div>

  <% if (notes.length>0) { %>
    <div class="row">
      <% notes.forEach(note => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card shadow-sm border-primary h-100">
            <a href="/dashboard/item/<%= note._id %>" class="text-decoration-none text-dark">
              <div class="card-body">
                <h5 class="card-title fw-bold"><%= note.title %></h5>
                <p class="card-text text-muted">
                  <%= note.body.length > 80 ? note.body.substring(0, 80) + '...' : note.body %>
                </p>
              </div>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="row align-items-center justify-content-center text-center">
      <div class="col-md-4">
        <img src="/img/human-3.svg" alt="Create your first note" class="img-fluid">
      </div>
      <div class="col-md-6 mt-4">
        <h2>Okay...</h2>
        <h4>
          Let's start with your first note!<br /><br />
          <a href="/dashboard/add" class="btn btn-outline-primary btn-lg">Create one!</a>
        </h4>
      </div>
    </div>
  <% } %>
</div>
